private static ProductRelationSnapshot createSnapshot(Long sourceId, Long targetId, ProductsRelationType relationType) {
        return ProductRelationsSnapshot.builder()
            .productId(sourceId)
            .relations(Set.of(
                ProductRelationSnapshot.builder()
                    .relationType(relationType)
                    .sourceId(sourceId)
                    .targetId(targetId)
                    .build()
            ))
            .build();
    }
